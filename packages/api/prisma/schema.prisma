generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===============================================
// Models for the "public" schema
// ===============================================

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt 

  // Relation to a store
  store          Store?

  @@map("users") 
}

model Store {
  id        String   @id // The subdomain, e.g., "malaikabeads"
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // <-- ADDED

  // Relation to the owner
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String   @unique

  @@map("stores") 
}

model Product {
  id          String    @id @default(uuid())
  name        String
  description String?
  price       Decimal   @db.Decimal(10, 2)
  imageUrl    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("products")
}