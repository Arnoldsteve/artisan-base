generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===============================================
// Models for the "public" schema
// ===============================================

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt 

  // Relation to a store
  store          Store?

  @@map("users") 
}

model Store {
  id        String   @id // The subdomain, e.g., "malaikabeads"
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // <-- ADDED

  // Relation to the owner
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String   @unique

  @@map("stores") 
}

model Product {
  id          String    @id @default(uuid())
  name        String
  description String?
  price       Decimal   @db.Decimal(10, 2)
  imageUrl    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("products")
  OrderItem OrderItem[]
}

model Order {
  id            String      @id @default(uuid())
  customerEmail String
  totalAmount   Decimal     @db.Decimal(10, 2)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Relation to the items in the order
  items         OrderItem[]

  @@map("orders")
}

// This is the join table for the many-to-many relationship
model OrderItem {
  id          String @id @default(uuid())
  quantity    Int
  
  // Relation to the Order
  order       Order  @relation(fields: [orderId], references: [id])
  orderId     String
  
  // Relation to the Product
  product     Product @relation(fields: [productId], references: [id])
  productId   String

  @@map("order_items")
}