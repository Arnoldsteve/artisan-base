{
  "extends": "../typescript-config/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@repo/ui": [
        "../ui/src"
      ],
      "@repo/ui/*": [
        "../ui/src/*"
      ],
      "@/lib/utils": [
        "../ui/src/lib/utils.ts"
      ],
      "@/components/ui/*": [
        "../ui/src/components/ui/*"
      ],
      "@/hooks/use-mobile": [
        "../ui/src/hooks/use-mobile.tsx"
      ]
    },
    "lib": [
      "dom", 
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
